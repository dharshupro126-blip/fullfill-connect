rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to the food images directory
    match /food-images/{allPaths=**} {
      allow read;
    }

    // Default deny all other reads and writes
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
